<UserControl
    x:Class="com.myxmu.SCADASystem.Views.LogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:com.myxmu.SCADASystem.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:com.myxmu.SCADASystem.UserControls"
    xmlns:vm="clr-namespace:com.myxmu.SCADASystem.ViewModels"
    d:DataContext="{d:DesignInstance vm:LogViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    FontFamily="Microsoft YaHei"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="#546e7a" BorderThickness="1">
            <StackPanel>

                <TextBlock
                    Background="#546e7a"
                    FontSize="16"
                    Foreground="White"
                    Text="日志控制台"
                    TextAlignment="Center" />
                <StackPanel
                    Margin="5"
                    Background="#546e7a"
                    Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="50"
                        Height="50"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="white"
                        Kind="FolderInformation" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="40"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                        Text="显示一周日志">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding OpenLogFolderCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBlock>
                </StackPanel>
                <!--  显示所有的日志文件名  -->
                <StackPanel Margin="5">
                    <ListView
                        Margin="5"
                        ItemsSource="{Binding LogFiles}"
                        SelectedItem="{Binding SelectedLogFile}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="150" DisplayMemberBinding="{Binding Name}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border
            Grid.Column="1"
            BorderBrush="#546e7a"
            BorderThickness="1">
            <DockPanel>
                <TextBlock
                    Background="#546e7a"
                    DockPanel.Dock="Top"
                    FontSize="16"
                    Foreground="White"
                    Text="日志内容"
                    TextAlignment="Center" />

                <!--  显示所有的日志内容  -->
                <ListView
                    Margin="5"
                    ItemsSource="{Binding LogEntries}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="200"
                                DisplayMemberBinding="{Binding Timestamp}"
                                Header="时间" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding Level}"
                                Header="级别" />
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding Logger}"
                                Header="来源" />
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding Message}"
                                Header="内容" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>

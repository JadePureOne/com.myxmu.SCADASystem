<UserControl
    x:Class="com.myxmu.SCADASystem.UserControls.PaginationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:com.myxmu.SCADASystem.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel
        Margin="5"
        HorizontalAlignment="Center"
        Orientation="Horizontal">
        <Button
            Width="30"
            Margin="0,0,5,0"
            Command="{Binding GoToFirstPageCommand}"
            Content="&lt;&lt;"
            Style="{DynamicResource MyButtonStyle}" />
        <Button
            Width="30"
            Margin="0,0,5,0"
            Command="{Binding GoToPreviousPageCommand}"
            Content="&lt;"
            Style="{DynamicResource MyButtonStyle}" />
        <TextBox
            Width="30"
            Margin="0,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding CurrentPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Center" />
        <Button
            Width="30"
            Margin="0,0,5,0"
            Command="{Binding GoToNextPageCommand}"
            Content="&gt;"
            Style="{DynamicResource MyButtonStyle}" />
        <Button
            Width="30"
            Margin="0,0,5,0"
            Command="{Binding GoToLastPageCommand}"
            Content="&gt;&gt;"
            Style="{DynamicResource MyButtonStyle}" />
        <TextBlock
            Margin="20,0,5,0"
            VerticalAlignment="Center"
            Text="总页码:" />
        <TextBlock
            Margin="20,0,5,0"
            VerticalAlignment="Center"
            Text="{Binding TotalPages}" />
    </StackPanel>
</UserControl>
